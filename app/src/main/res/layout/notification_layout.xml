<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:id="@+id/notification_container"
    >

    <ImageView

        android:id="@+id/music_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="1"
        android:layout_gravity="center"

        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_weight="5.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
            android:id="@+id/noti_music_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="音乐名称"
            android:gravity="center"
            android:layout_weight="3"

            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="-1"
            android:scrollHorizontally="true"
            android:singleLine="true"

            />
            <TextView
                android:id="@+id/noti_music_nauthor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="音乐作者"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight="1"

                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="-1"
                android:scrollHorizontally="true"
                android:singleLine="true"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_lastsong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/last_song"
                />
            <ImageView
                android:id="@+id/img_status_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/play_noti"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/img_status_pause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/pause_noti"
                />
            <ImageView
                android:id="@+id/img_nextsong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/next_song"
                />
<!--            <ImageView-->
<!--                android:id="@+id/img_favorite"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"-->
<!--                android:src="@drawable/wait_fav"-->
<!--                />-->


        </LinearLayout>



    </LinearLayout>



</LinearLayout>
